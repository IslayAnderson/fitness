{% extends 'layout.twig' %}
{% block content %}
    <section class="measurements">
        <h1 class="measurements__title">Add Measurement</h1>

        <form id="measurementForm" class="measurements__form" autocomplete="off">
            <div class="measurements__field">
                <label class="measurements__label" for="m_body_part">Body part</label>
                <select id="m_body_part" name="body_part" required class="measurements__input">
                    {% for b in bodyParts %}
                        <option value="{{ b.id }}">{{ b.name }} ({{ b.measurement_type }})</option>
                    {% endfor %}
                </select>
            </div>

            <div class="measurements__field">
                <label class="measurements__label" for="m_value">Measurement</label>
                <input id="m_value" name="measurement" type="number" step="0.01" required class="measurements__input" />
            </div>

            <div class="measurements__actions">
                <button type="submit" class="button">Save</button>
            </div>
        </form>

        <output id="measurementResult" class="measurements__result" aria-live="polite"></output>
    </section>
{% endblock %}
